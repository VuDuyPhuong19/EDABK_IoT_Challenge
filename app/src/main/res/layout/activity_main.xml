<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#64D378">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/arial"
            android:text="App Name"
            android:textColor="#ffffff"
            android:textSize="28dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btnNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:background="#64D378"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/notification" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="#ffffff">

        <TextView
            android:id="@+id/AirConditioner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/arial"
            android:text="Air conditioning"
            android:textSize="28dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20sp"
            android:adjustViewBounds="true"
            android:background="#ffffff"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/larrow" />

        <ImageButton
            android:id="@+id/editName"
            android:layout_width="16sp"
            android:layout_height="16sp"

            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="49dp"
            android:layout_marginEnd="21dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="12dp"
            android:layout_toRightOf="@id/AirConditioner"
            android:adjustViewBounds="true"
            android:background="#ffffff"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/nameedit"
            tools:ignore="TouchTargetSizeCheck" />
    </RelativeLayout>

    <!-- Device Controls Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:weightSum="1">
        <!-- Add more devices as needed -->

        <include
            android:id="@+id/device_1"
            layout="@layout/device_controller"
            android:layout_width="279dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5" />

        <include
            android:id="@+id/device_2"
            layout="@layout/device_controller"
            android:layout_width="279dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5" />
    </LinearLayout>
    <!-- Device Controls Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-15dp"
        android:orientation="horizontal"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:weightSum="1">
        <!-- Add more devices as needed -->

        <include
            android:id="@+id/device_3"
            layout="@layout/device_controller"
            android:layout_width="279dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5" />

        <include
            android:id="@+id/device_4"
            layout="@layout/device_controller"
            android:layout_width="279dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5" />
    </LinearLayout>

    <!-- Repeat for other devices -->
</LinearLayout>